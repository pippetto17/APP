<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dark_wallpaper">

    <EditText
        android:id="@+id/textName"
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:layout_marginTop="46dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/box"
        android:drawableLeft="@drawable/user_image"
        android:ems="10"
        android:hint=" Nome"
        android:inputType="textPersonName"
        android:paddingStart="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/textSurname"
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/box"
        android:drawableLeft="@drawable/user_image"
        android:ems="10"
        android:hint=" Cognome"
        android:inputType="textPersonName"
        android:paddingStart="5dp"
        app:layout_constraintTop_toBottomOf="@id/textName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/textPhone"
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/box"
        android:drawableLeft="@drawable/phone_image"
        android:ems="10"
        android:hint=" Telefono"
        android:inputType="phone"
        android:paddingStart="5dp"
        app:layout_constraintTop_toBottomOf="@id/textSurname"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/textUser"
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/box"
        android:drawableLeft="@drawable/email_image"
        android:ems="10"
        android:hint=" Email"
        android:inputType="textEmailAddress"
        android:paddingStart="5dp"
        app:layout_constraintTop_toBottomOf="@id/textPhone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/password_cover_reg"
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="92dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPersonName"
        android:textColorHint="#373737"
        app:counterEnabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textUser"
        app:passwordToggleEnabled="true">


        <EditText
            android:id="@+id/password_reg"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/box_password"
            android:ems="10"
            android:inputType="textPassword" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/password_confirm_cover"
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="92dp"
        android:ems="10"
        android:hint="Conferma Password"
        android:inputType="textPersonName"
        android:textColorHint="#373737"
        app:counterEnabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/password_cover_reg"
        app:passwordToggleEnabled="true">


        <EditText
            android:id="@+id/password_confirm"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/box_password"
            android:ems="10"
            android:inputType="textPassword" />

    </com.google.android.material.textfield.TextInputLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/SignInButton"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="85dp"
        app:cardBackgroundColor="@color/black"
        app:cardCornerRadius="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password_confirm_cover">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/SignIn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Sign in"
                android:textColor="@color/white"
                android:textSize="16dp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>