<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="15dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_card"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_marginBottom="15dp"
        app:cardCornerRadius="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/bg_creator_match"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/c_item_soccer" />

        <Button
            android:id="@+id/buttonItem"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="350dp"
            android:layout_height="120dp"
            android:backgroundTint="#00FFFFFF" />

        <TextView
            android:id="@+id/cittaC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="20dp"
            android:text="Città"
            android:textColor="?attr/colorSecondaryVariant"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/modalitaTS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:text="Modalità:"
            android:textColor="?attr/colorSecondaryVariant"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/modalitaC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:layout_marginStart="105dp"
            android:layout_marginBottom="10dp"
            android:text="singolo"
            android:textColor="?attr/colorSecondaryVariant"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/fasciaC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:hint="prova"
            android:text="Fascia Oraria"
            android:textColor="?attr/colorSecondaryVariant"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/giornoC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:text="24/03/2021"
            android:textColor="?attr/colorSecondaryVariant"
            android:textSize="20sp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>