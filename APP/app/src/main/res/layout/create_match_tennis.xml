<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/light_wallpaper">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="40dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/show_dialog"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:textSize="14sp"
            app:cardBackgroundColor="@color/black"
            app:cardCornerRadius="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/show_dialogT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Seleziona Data"
                    android:textColor="@color/white" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Data"
            android:textColor="@color/black"
            android:textColorHint="#424242"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/show_dialog" />

        <TextView
            android:id="@+id/time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Fascia oraria:"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/date_text" />

        <TableRow
            android:id="@+id/table_time"
            android:layout_width="414dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/time_text">

            <CheckBox
                android:id="@+id/checkBox_morning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="70dp"
                android:buttonTint="#000000" />

            <TextView
                android:id="@+id/morning"
                android:layout_width="wrap_content"
                android:layout_marginStart="-65dp"
                android:layout_marginTop="30dp"
                android:text="MATTINA"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/checkBox_afteroon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="70dp"
                android:buttonTint="#000000" />

            <TextView
                android:id="@+id/afternoon"
                android:layout_width="wrap_content"
                android:layout_marginStart="-78dp"
                android:layout_marginTop="30dp"
                android:text="POMERIGGIO"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/checkBox_evening"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:buttonTint="#000000" />

            <TextView
                android:id="@+id/evening"
                android:layout_width="wrap_content"
                android:layout_marginStart="-50dp"
                android:layout_marginTop="30dp"
                android:text="SERA"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold" />
        </TableRow>

        <TextView
            android:id="@+id/mod_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="ModalitÃ  di gioco:"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/table_time" />

        <TableRow
            android:id="@+id/table_mod"
            android:layout_width="414dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mod_text">

            <CheckBox
                android:id="@+id/checkBox_single"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="140dp"
                android:buttonTint="#000000" />

            <TextView
                android:id="@+id/single"
                android:layout_width="wrap_content"
                android:layout_marginStart="-64dp"
                android:layout_marginTop="30dp"
                android:text="SINGOLO"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/checkBox_dual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="55dp"
                android:buttonTint="#000000" />

            <TextView
                android:id="@+id/dual"
                android:layout_width="wrap_content"
                android:layout_marginStart="-57dp"
                android:layout_marginTop="30dp"
                android:text="DOPPIO"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold" />
        </TableRow>

        <EditText
            android:id="@+id/zone"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:background="@drawable/box"
            android:layout_marginTop="26dp"
            android:ems="10"
            android:hint="Zona"
            android:inputType="textPersonName"
            android:paddingStart="5dp"
            android:textColor="#000000"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/table_mod"
            tools:visibility="visible" />

        <EditText
            android:id="@+id/email_ad"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:background="@drawable/box"
            android:layout_marginTop="24dp"
            android:drawableStart="@drawable/email_image"
            android:ems="10"
            android:hint=" Email"
            android:inputType="textEmailAddress"
            android:paddingStart="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/zone" />

        <EditText
            android:id="@+id/phone_ad"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:background="@drawable/box"
            android:layout_marginTop="24dp"
            android:drawableStart="@drawable/phone_image"
            android:ems="10"
            android:hint=" Telefono"
            android:inputType="phone"
            android:paddingStart="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/email_ad" />

        <TextView
            android:id="@+id/infos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:text="INFORMAZIONI AGGIUNTIVE"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/phone_ad" />

        <EditText
            android:id="@+id/info_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="#3B000000"
            android:ems="10"
            android:gravity="top"
            android:hint="..."
            android:inputType="textMultiLine"
            android:lines="5"
            android:paddingStart="5dp"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/infos"
            app:layout_constraintVertical_bias="0.0"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/create_ad"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:textSize="14sp"
            app:cardBackgroundColor="@color/black"
            app:cardCornerRadius="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/info_box">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/create_adT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Crea Annuncio"
                    android:textColor="@color/white" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>